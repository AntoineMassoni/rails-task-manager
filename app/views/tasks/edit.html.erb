<form action="/tasks/<%= @task.id %>" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="_method" type="hidden" value="patch"/>
  <label for="name">Title: </label>
  <input type="text" name="task[title]" id="title" value="<%= @task.title %>">


  <label for="details">Details: </label>
  <input type="text" name="task[details]" id="details" value="<%= @task.details %>">

  <% if @task.completed == true %>
    <input type="checkbox" id="completed" name="task[completed]" checked >
    <label for="completed">Mark as completed</label>
  <% else %>
    <input type="checkbox" id="completed" name="task[completed]" >
    <label for="completed">Mark as completed</label>
  <% end %>

  <input type="submit">
</form>

<%= link_to "Cancel", tasks_path %>
